<p id="notice"><%= notice %></p>

<h1>Students</h1>

<% if @students.any? %>
  <table>
    <thead>
      <tr>
        <th colspan="1">name</th>
        <th colspan="1">grade</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr data-student-id=<%= student.id %>>
          <td><%= student.name %></td>
          <td><%= student.grade %></td>
          <td><%= link_to 'Register', new_parent_student_ballot_path(student) %></td>
          <td><%= link_to 'Show', parent_student_path(student) %></td>
          <td><%= link_to 'Edit', edit_parent_student_path(student) %></td>
          <td><%= link_to 'Destroy', parent_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <%= link_to 'New Student', new_parent_student_path %>
<% else %>
  You haven't registered any students yet.
  <%= link_to 'Add one now.', new_parent_student_path %>
<% end %>
