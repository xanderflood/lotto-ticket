<p id="notice"><%= notice %></p>

<h1>Students</h1>

<% if @students.any? %>
  <table>
    <thead>
      <tr>
        <th colspan="1">Name</th>
        <th colspan="1">Grade</th>
        <th colspan="1">Registration Priority</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.sort_by(&:name).each do |student| %>
        <tr data-student-id=<%= student.id %>>
          <td><%= student.name %></td>
          <td><%= student.grade %></td>
          <td><%= (student.priority == 0) ? "No" : "Yes" %></td>
          <td>
            <% if student.grade && student.grade != "unspecified" && student.school_grade && student.school_grade >= 6 %>
              <%= link_to 'Register', new_parent_student_ballot_path(student) %>
            <% elsif student.school_grade && student.school_grade <= 5 %>
              (Contact Math-Circle to register elementary school students.)
            <% else %>
              Click edit and enter your grade and math circle level.
            <% end %>
          </td>
          <td><%= link_to 'Show', parent_student_path(student) %></td>
          <td><%= link_to 'Edit', edit_parent_student_path(student) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />

  <%= link_to 'New Student', new_parent_student_path %>
<% else %>
  You haven't registered any students yet.
  <%= link_to 'Add one now.', new_parent_student_path %>
<% end %>
