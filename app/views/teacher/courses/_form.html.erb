<%= form_for [:teacher, course] do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.messages.values.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :semester %>
    <%= f.collection_select :semester_id, Semester.all, :id, :name, {}, {disabled: :disabled} %>
    <%= f.hidden_field :semester_id %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity, min: 1, step: 1 %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.select :level, collection: Course.levels.keys.to_a %>
  </div>

  <div class="field">
    <%= f.label :overview %> <br/>
    <%= f.text_area :overview, style: "resize: vertical; width: 400" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
