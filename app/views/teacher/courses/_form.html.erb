      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :semester %>
    <%= f.collection_select :semester_id, Semester.all, :id, :name, {}, {disabled: :disabled} %>
    <%= f.hidden_field :semester_id %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :grade %>
    <%= f.select :grade, collection: Course.grades.keys.to_a %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
