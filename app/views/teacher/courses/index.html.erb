<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">name</th>
      <th colspan="1">semester</th>
      <th colspan="1">grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.semester.name %></td>
        <td><%= course.grade %></td>
        <td><%= link_to 'Show', teacher_course_path(course) %></td>
        <td><%= link_to 'Edit', edit_teacher_course_path(course) %></td>
        <td><%= link_to 'Destroy', teacher_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

