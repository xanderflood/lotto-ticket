<%= form_tag(teacher_event_groups_path, method: :post) do %>
  <% if teacher_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher_event.errors.count, "error") %> prohibited this teacher_event from being saved:</h2>

      <ul>
      <% teacher_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :name %>
    <%= text_field_tag 'event[name]', '', type: :text %>
  </div>

  <div class="field">
    <%= label_tag :semester %>
    <%= collection_select :event, :semester_id, Semester.all, :id, :name %>
  </div>
  
  <div class="field">
    <%= label_tag :course %>
    <!-- TODO: scope the courses listed here, maybe by scoping the route, or through AJAX? -->
    <%= collection_select :event, :course_id, Course.all, :id, :name %>
  </div>

  <div class="field">
    <!-- <%= label_tag :name %> -->
    <%= select_recurring :event, :schedule %>
  </div>

  <div class="field">
    <%= label_tag :start_date %>
    <%= date_select :event, :start_date %>
  </div>

  <div class="field">
    <%= label_tag :end_date %>
    <%= date_select :event, :end_date %>
  </div>

  <div class="field">
    <%= label_tag :event_time %>
    <%= time_select :event, :time_of_day %>
  </div>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
