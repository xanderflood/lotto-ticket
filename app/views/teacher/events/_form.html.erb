<%= form_for [:teacher, event] do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :section %>
    <%= f.collection_select :section_id, [event.section], :id, :description, {}, {disabled: :disabled} %>
    <%= f.hidden_field :section_id %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :when %>
    <%= f.date_select :when %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time, { ampm: true } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
