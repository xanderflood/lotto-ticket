<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.when %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', teacher_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_teacher_event_path(event) %></td>
        <td><%= link_to 'Destroy', teacher_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

