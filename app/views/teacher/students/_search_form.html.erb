<div class="card">
  <div class="card-header" role="tab" id="headingOne">
    <h5>
      <a data-toggle="collapse" href="#search_collapse" aria-expanded="true" aria-controls="collapseOne">
        Student search
      </a>
    </h5>
  </div>

  <div id="search_collapse" class="collapse" role="tabpanel">
    <div class="card-block">
      <%= form_tag search_teacher_students_path, method: :get do %>
        <div class="field">
          <%= label_tag :first_name %>
          <%= text_field_tag :'search[first_name]' %>
        </div>

        <div class="field">
          <%= label_tag :last_name %>
          <%= text_field_tag :'search[last_name]' %>
        </div>

        <div class="actions">
          <%= submit_tag 'Search' %>
        </div>
      <% end %>
    </div>
  </div>
</div>