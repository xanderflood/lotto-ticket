<p id="notice"><%= notice %></p>

<h1>Students</h1>

<% will_paginate @users %>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>ID</td>
      <td>Grade</td>
      <td>Level</td>
      <td>Waiver</td>
      <td>Photo permission</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.id %></td>
        <td><%= student.grade %></td>
        <td><%= student.level %></td>
        <td><%= student.waiver ? "Yes" : "No" %></td>
        <td><%= student.photo_permission ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', teacher_student_path(student) %></td>
        <td><%= link_to 'Edit', edit_teacher_student_path(student) %></td>
        <td><%= link_to 'Destroy', teacher_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% will_paginate @users %>

<br>
